# ============================================================
# TRAMMO NH3 TRADING DESK — Environment Variables
# ============================================================
# Copy to .env for local dev (never commit .env).
# For Fly.io: fly secrets import < .env
# ============================================================


# ── REQUIRED ────────────────────────────────────────────────

# PostgreSQL — provided automatically by fly postgres attach
DATABASE_URL=

# Phoenix session secret — generate with: mix phx.gen.secret
SECRET_KEY_BASE=

# Public hostname (no https://) e.g. your-app.fly.dev
PHX_HOST=

# Internal HTTP port (Fly routes HTTPS → this port)
PORT=4111

# DB connection pool size
POOL_SIZE=10


# ── ANTHROPIC / CLAUDE AI ────────────────────────────────────
ANTHROPIC_API_KEY=


# ── EMAIL / SMTP ──────────────────────────────────────────────
# Microsoft 365 default (smtp.office365.com:587 with STARTTLS)
# Leave blank to disable email — magic link still appears in fly logs
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
# Use a shared mailbox or service account e.g. noreply@trammo.com
SMTP_USERNAME=
SMTP_PASSWORD=


# ── AIS VESSEL TRACKING ──────────────────────────────────────
AISSTREAM_API_KEY=

# Comma-separated MMSIs to track specific vessels (leave empty = all)
TRACKED_VESSELS=

# Extra ocean bounding box: lat_tl,lon_tl,lat_br,lon_br
AISSTREAM_EXTRA_BBOX=

MARINETRAFFIC_API_KEY=
AISHUB_API_KEY=


# ── SAP INTEGRATION ──────────────────────────────────────────
SAP_API_BASE=
SAP_API_USER=
SAP_API_PASS=
SAP_API_URL=
SAP_API_KEY=
SAP_ODATA_BASE_URL=
SAP_CLIENT=
SAP_WEBHOOK_TOKEN=


# ── MARKET DATA ──────────────────────────────────────────────
ARGUS_API_KEY=
ARGUS_API_URL=

ICIS_API_KEY=
ICIS_API_URL=

EIA_API_KEY=
FRED_API_KEY=

MARKET_FEED_URL=
MARKET_FEED_KEY=


# ── BROKER / TMS ─────────────────────────────────────────────
BROKER_API_URL=
BROKER_API_KEY=

TMS_URL=
TMS_API_KEY=


# ── INSIGHT (TRAMMO TERMINAL MANAGEMENT SYSTEM) ──────────────
# System of record for physical NH3 inventory at Meredosia and Niota terminals.
# Until configured, the app uses seed data; traders can adjust via UI sliders.
INSIGHT_API_URL=
INSIGHT_API_KEY=


# ── SCADA / OPERATIONS ───────────────────────────────────────
SCADA_API_URL=
SCADA_API_KEY=


# ── CONTRACTS — MICROSOFT GRAPH / SHAREPOINT ─────────────────
GRAPH_TENANT_ID=
GRAPH_CLIENT_ID=
GRAPH_CLIENT_SECRET=
GRAPH_DRIVE_ID=

CONTRACT_UPLOAD_DIR=


# ── LLM CONTRACT ANALYSIS ────────────────────────────────────
COPILOT_ENDPOINT=
